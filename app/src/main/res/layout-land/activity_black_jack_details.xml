<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_black_jack_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csci4020.shawnbickel.assignment1.blackjack.BlackJackDetails"
    android:background="#006B3C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ExtraInformation"
            android:layout_weight="1"
            android:background="#006B3C"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="45dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/moreinformationimage"
            android:scaleType="fitXY"
            android:id="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/blackjack"
            android:id="@+id/imageView5"
            android:layout_weight="1" />
    </LinearLayout>


</RelativeLayout>
